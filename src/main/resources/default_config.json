{
  "minifier": {
    "options": [
      "--minify-js",
      "--minify-css",
      "--collapse-whitespace"
    ]
  },
  "make": {
    "mode": "root_only",
    "ignore_hidden": true,
    "threads": 3,

    "hooks": {
      "pre_build": [],
      "post_build": []
    },
    "hook_runner": ["/bin/bash", "-c"],

    "other": {
      "mode": "assets",
      "minify_json": true
    }
  }
}