{
  "minifier": {
    "minify_js": true,
    "minify_css": true
  },
  "make": {
    "mode": "recurse",
    "ignore_hidden": true,
    "threads": 3,

    "hooks": {
      "pre_build": [],
      "post_build": []
    },
    "hook_runner": ["/bin/bash", "-c"],

    "other": {
      "mode": "assets",
      "minify_json": true
    }
  }
}